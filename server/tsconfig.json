{
  "compilerOptions": {
    // ---- File Structure ----
    "rootDir": "./",
    "outDir": "./dist",

    // ---- Module Resolution ----
    "module": "CommonJS",
    "moduleResolution": "node",
    "target": "ES2020",
    "lib": ["ESNext"],
    "types": ["node"],

    // ---- Interop and Imports ----
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,

    // ---- Output Helpers ----
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // ---- Type Checking ----
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "skipLibCheck": true,

    // ---- Module Isolation ----
    "isolatedModules": false
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
